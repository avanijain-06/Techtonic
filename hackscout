const listDiv = document.getElementById("hackathonList");

function displayHackathons(data) {
  listDiv.innerHTML = "";
  data.forEach(h => {
    listDiv.innerHTML += `
      <div class="hackathon">
        <h3>${h.name}</h3>
        <p>ğŸ“ ${h.location}</p>
        <p>ğŸ“… ${h.date}</p>
        <p>â° Deadline: ${h.deadline}</p>
        <p>ğŸ· ${h.domain}</p>
        <button>Register</button>
      </div>
    `;
  });
}

displayHackathons(hackathons);
document.getElementById("search").addEventListener("input", function () {
  const value = this.value.toLowerCase();
  const filtered = hackathons.filter(h =>
    h.name.toLowerCase().includes(value) ||
    h.domain.toLowerCase().includes(value)
  );
  displayHackathons(filtered);
});
